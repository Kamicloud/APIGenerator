<?php

namespace App\Generated\Controllers\V1_1;

use App\Generated\V1_1\Messages\Pet\AddPetMessage;
use App\Http\Services\V1_1\PetService;
use App\Http\Controllers\Controller;
use DB;

class PetController extends Controller
{
    public $handler;

    public function __construct(PetService $handler)
    {
        $this->handler = $handler;
    }

    public function addPet(AddPetMessage $message)
    {
        $message->validateInput();
        $message->forceRequestScalarTypes();
        $this->handler->addPet($message);
        $message->validateOutput();
        $message->forceResponseScalarTypes();
        return $message->getResponse();
    }

}
